<Window x:Class="Ten2Five.Plugins.PluginWordsAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Learn Words: About" Height="365" Width="300" MouseUp="Reset_MouseUp" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,15,0,0" Height="25" VerticalAlignment="Top" TextWrapping="WrapWithOverflow"><Run FontSize="20">Learn Words Plugin</Run></TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0,40,0,0" Height="20" VerticalAlignment="Top" TextWrapping="WrapWithOverflow"><Run FontSize="15">© Alex "Y_Less" Cole, 2015</Run></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="15,70,15,15" VerticalAlignment="Top" TextWrapping="WrapWithOverflow">
